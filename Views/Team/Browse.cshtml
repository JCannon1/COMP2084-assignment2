@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model Assignment2.Models.HockeyModel

<h2>Teams for: @Model.Name</h2>

<table class="table table-striped table-hover">
    <tr>
        <th>Title</th>
        <th>Team</th>
        <th>Player</th>
    </tr>

    @foreach (var t in Model.Teams)
    {
        <tr>
            <td> t.Title</td>
            <td> t.Name</td>
            <td> t.City</td>
        </tr>
    }
</table>

